{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "es5", "es6", "esnext"],
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": true,
    "rootDirs": "src",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
